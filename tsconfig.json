{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}